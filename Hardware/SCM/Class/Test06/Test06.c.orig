# include <reg52.h>
# include <intrins.h>
#define uchar unsigned char//
#define uint  unsigned int //

sbit we = P2^7; //位选
sbit du = P2^6; //段选
uchar i = 0;

uchar code leddata[]= {

    0x3F,  //"0"
    0x06,  //"1"
    0x5B,  //"2"
    0x4F,  //"3"
    0x66,  //"4"
    0x6D,  //"5"
    0x7D,  //"6"
    0x07,  //"7"
    0x7F,  //"8"
    0x6F,  //"9"
    0x77,  //"A"
    0x7C,  //"B"
    0x39,  //"C"
    0x5E,  //"D"
    0x79,  //"E"
    0x71,  //"F"
    0x76,  //"H"
    0x38,  //"L"
    0x37,  //"n"
    0x3E,  //"u"
    0x73,  //"P"
    0x5C,  //"o"
    0x40,  //"-"
    0x00,  //??
    0x00  //???

};

void delay(uint z)
{
    uint x,y;
    for(x = z; x > 0; x--)
        for(y = 114; y > 0 ; y--);
}


void main()
{
    while(1) {
      P0 = 0xfe; //1111 1110  1111 1101
			for(i= 0;i<8;i++)
			{
				P0 =_cror_(P0,1);
				we = 1;
        we = 0;
        P0 = leddata[2];
        du = 1;
        du = 0;
        delay(2);
				if(i==8)
					i=0;
			} 
    }
}

